<script data-isso="//isso.postblue.info/" data-isso-css="true" data-isso-reply-to-self="false" data-isso-avatar="false" data-isso-vote="false"
src="//isso.postblue.info/js/embed.min.js"></script>

<article class="post-container {{post_class}}">
    <header class="post-header">
        <h1 class="post-title">{{title}}</h1>

        <p class="post-date">Published <time datetime="{{published_at}}">{{date format="MMMM Do YYYY"}}</time> <strong>by {{author}}</strong></p>
    </header>

    <div class="post-content clearfix">
        {{#if feature_image}}
            <img class="post-featured-image" src="{{img_url feature_image}}">
        {{/if}}

        {{{content}}}
    </div>

    <footer class="post-footer clearfix">
        {{#if tags}}
            <p class="post-tags"><span>Tagged:</span> {{tags}}</p>
        {{/if}}

        <div class="share">
            <a class="icon-liberapay" href="https://liberapay.com/postblue/donate">
                <i class="fa fa-liberapay" aria-hidden="true"></i>
                <span class="hidden">Liberapay</span>
            </a>

            <a class="icon-paypal" href="https://www.paypal.me/gllmhyt">
                <i class="fa fa-paypal" aria-hidden="true"></i>
                <span class="hidden">PayPal.Me</span>
            </a>

            <a class="icon-bitcoin" href="bitcoin:1KyKW8xDmdcPQ9sj8ruE92ha7arxt2uQSd?message={{title}}">
               <i class="fa fa-btc" aria-hidden="true"></i>
               <span class="hidden">Bitcoin</span>
            </a>
        </div>
    </footer>

    <div class="post-comments clearfix">
	<section id="isso-thread" data-isso-id="{{url relative="true"}}"></section>
    </div>
</article>
